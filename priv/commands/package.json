{
	"devDependencies": {
		"chokidar-cli": "^1.2.1",
		"eslint": "^3.15.0",
		"eslint-config-airbnb-base": "^11.1.0",
		"eslint-plugin-compat": "^1.0.1",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-promise": "^3.4.1",
		"npm-run-all": "^4.1.3"
	},
	"dependencies": {
		"@babel/cli": "^7.0.0",
		"@babel/core": "^7.0.1",
		"@babel/polyfill": "^7.0.0",
		"@babel/preset-env": "^7.0.0",
		"ajv": "^6.5.0",
		"image-size": "^0.6.2",
		"puppeteer": "^1.4.0",
		"yargs": "^11.0.0"
	},
	"scripts": {
		"find-chmod": "find ./compiled -name \"index.js\" -exec chmod +x {} \\;",
		"babel": "npx babel src --out-dir compiled",
		"start-find-chmod": "npx chokidar-cli \"./compiled/**/index.js\" -c \"npm run find-chmod\"",
		"start-babel": "npm run babel -- --watch",
		"start": "npm-run-all -p start-*",
		"build": "npm run babel && npm run find-chmod"
	}
}
