<%= render SubtitleView, "bare.html", subtitle: "All Regions" %>

<%= render "request_changes.html", assigns %>

<section class="container mt-3 mb-5">
	<%= for region <- @regions do %>
		<div class="my-2">
			<h6 class="mb-0">
				<a href="<%= RouterHelpers.admin_region_path(@conn, :show, region) %>"><%= Title.bolded(region, %{with_parent: true}) %></a>
			</h6>
		</div>
	<% end %>
</section>
