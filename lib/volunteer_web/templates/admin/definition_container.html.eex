<div class="row mb-1">
	<div class="col-12 col-md-3 text-md-right mb-1q mb-md-0">
		<strong><p class="m-0"><%= assigns[:title_text] %></p></strong>
	</div>
	<div class="col-12 col-md-9">
		<%= if assigns[:do] do %>
			<%= assigns[:do] %>
		<% else %>
			<p class="mb-0"><%= assigns[:body_text] |> VolunteerWeb.HTMLHelpers.default_if_blank?() %></p>
		<% end %>
	</div>
</div>
