<%= render SubtitleView, "bare.html", subtitle: "All Groups" %>

<%= render "request_changes.html", assigns %>

<section class="container mt-3 mb-5">
	<%= for group <- @groups do %>
		<div class="my-2">
			<h6 class="mb-0">
				<a href="<%= RouterHelpers.admin_group_path(@conn, :show, group) %>"><%= Title.bolded(group) %></a>
			</h6>
		</div>
	<% end %>
</section>
