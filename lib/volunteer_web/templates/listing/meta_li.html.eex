<%= if Enum.member?(@show, :expiry) do %>
	<li class="list-inline-item"><i class="far fa-hourglass-half mr-2q" aria-hidden="true"></i>Listing expires on <em><%= expiry_datetime_text(@listing.expiry_date) %></em></li>
<% end %>
