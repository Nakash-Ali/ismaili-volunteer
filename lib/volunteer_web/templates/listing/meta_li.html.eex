<%= if Enum.member?(@show, :expiry) and Listings.Public.Introspect.has_expiry?(@listing) do %>
	<li class="list-inline-item"><i class="far fa-hourglass-half mr-2q" aria-hidden="true"></i>Listing expires on <%= expiry_datetime_text(@listing.public_expiry_date) %></li>
<% end %>
