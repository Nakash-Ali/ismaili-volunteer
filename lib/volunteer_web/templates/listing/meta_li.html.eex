<%= if Enum.member?(@show, :time_commitment) do %>
	<li class="list-inline-item"><i class="far fa-clock mr-2q" aria-hidden="true"></i><%= time_commitment_text(@listing) %></li>
<% end %>

<%= if Enum.member?(@show, :start_date_and_end_date) do %>
	<li class="list-inline-item"><i class="far fa-calendar mr-2q" aria-hidden="true"></i><%= start_date_and_end_date_text(@listing.start_date, @listing.end_date) %></li>
<% end %>

<%= if Enum.member?(@show, :region) do %>
	<li class="list-inline-item"><i class="far fa-globe-stand mr-2q" aria-hidden="true"></i><%= VolunteerWeb.Presenters.Title.plain(@listing.region) %></li>
<% end %>

<%= if Enum.member?(@show, :group) do %>
	<li class="list-inline-item"><i class="far fa-users mr-2q" aria-hidden="true"></i><%= VolunteerWeb.Presenters.Title.plain(@listing.group) %></li>
<% end %>

